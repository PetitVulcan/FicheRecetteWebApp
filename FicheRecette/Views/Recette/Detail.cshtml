@using FicheRecette.Models;
@model List<Recette> ;


<div class="Container Recette">
    @foreach (Recette r in Model)
    {
        <div class="Titre">
            <h2>@r.NomRecette</h2>
        </div>
        <div class="CorpsRecette">
            <div class="col-lg-12">               
                <div class="row1">
                    <div class="col-lg-4">
                        <div>
                            <h3 class="Recette">Informations :</h3>
                        </div>
                        <div class="row1">
                            <div class="col-lg-12">Catégorie :@r.NomCategory</div>
                        </div>
                        <div class="row1">
                            <div class="col-lg-12">Nombre de personne(s) : @r.NbPersonne</div>
                        </div>
                        <div class="row1">
                            <div class="col-lg-12">Niveau de difficulté : @r.Difficulte</div>
                        </div>
                        <div class="row1">
                            <div class="col-lg-12">Ajoutée par : @r.NomUtilisateur</div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div>
                            <h3 class="Recette">Ingrédients : </h3>
                        </div>
                        @foreach (Ingredient i in r.Ingredients)
                        {
                            <div class="ingredients">
                                @i.ToString()
                            </div>
                        }

                    </div>
                    <div class="col-lg-4 imagedroite">
                        <div class="imgFiche">
                            <img class="imgDetail" src="~/@r.Images[0].Url" max-height="250" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row RecetteLine">
            <div class="row1">
                <div class="col-lg-12">

                </div>
            </div>
        </div>

        <div class="row RecetteLine">
            <div class="row1">
                <div class="col-lg-12">
                    <div><h3 class="Recette">Réalisation : </h3></div>
                    <div class="row1">
                        @r.Realisation
                    </div>
                </div>
            </div>
        </div>
        <div class="row RecetteLine">
            <div class="Titre">
                @if (@ViewBag.Nom == "Admin")
                {
                    @*<div class="col-lg-6">
                            <button class="TitreCentrer" type="submit"><a asp-action="ModifierRecette" asp-controller="Recette" asp-route-id="@r.Id">Modifier</a></button>
                        </div>*@
                    <div class="col-lg-6">
                        <a asp-action="SupprimerRecette" asp-controller="Recette" asp-route-id="@r.Id">Supprimer</a>
                    </div>
                }
                @if (@ViewBag.nom == r.NomUtilisateur)
                {

                    @*<div class="col-lg-6">
                            <button class="TitreCentrer" type="submit"><a asp-action="ModifierRecette" asp-controller="Recette" asp-route-id="@r.Id">Modifier</a></button>
                        </div>*@
                    <div class="col-lg-6">
                        <a asp-action="SupprimerRecette" asp-controller="Recette" asp-route-id="@r.Id">Supprimer</a>
                    </div>
                }
            </div>
        </div>
    }
</div>




